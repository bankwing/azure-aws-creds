{
  "name": "azure-aws-creds",
  "version": "0.6.1",
  "description": "Electron app to update AWS credentials via Azure AD federation",
  "main": "src/main.js",
  "bin": "./src/main.js",
  "scripts": {
    "start": "npm install && electron ./src/main.js",
    "debug": "cross-env DEBUG=azure-aws-creds electron src/main.js",
    "webpack": "webpack --config=build/webpack.app.config.js --env=production",
    "release": "npm run webpack && electron-builder"
  },
  "build": {
    "appId": "com.example.azure-aws-creds",
    "files": [
      "package.json",
      "src/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "src/"
    },
    "linux": {
      "category": "Utility"
    },
    "nsis": {
      "artifactName": "${productName}_${version}_setup.${ext}"
    },
    "win": {
      "icon": "src/AWS.ico"
    }
  },
  "electronWebpack": {
    "title": true,
    "main": {
      "sourceDirectory": "src/"
    },
    "renderer": {
      "sourceDirectory": null
    }
  },
  "repository": "https://github.com/mr-olson/azure-aws-creds",
  "keywords": [
    "Azure Active Directory",
    "AWS",
    "SAML",
    "SSO",
    "CLI",
    "credentials"
  ],
  "author": "Mark Olson",
  "license": "MIT",
  "homepage": "https://github.com/mr-olson/azure-aws-creds",
  "bugs": {
    "url": "https://github.com/mr-olson/azure-aws-creds/issues"
  },
  "devDependencies": {
    "cross-env": "^5.1.4",
    "devtron": "^1.4.0",
    "electron": "^1.8.6",
    "electron-builder": "^20.11.1",
    "electron-debug": "^1.5.0",
    "webpack": "^3.11.0",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "aws-sdk": "^2.230.1",
    "bootstrap": "^4.1.1",
    "cheerio": "^1.0.0-rc.2",
    "datatables.net": "^1.10.16",
    "datatables.net-bs4": "^1.10.16",
    "datatables.net-dt": "^1.10.16",
    "debug": "^3.1.0",
    "ini": "^1.3.5",
    "jquery": "^3.3.1",
    "jquery-countdown": "^2.2.0",
    "jwt-decode": "^2.2.0",
    "popper.js": "^1.14.3",
    "source-map-support": "^0.5.5",
    "uuid": "^3.2.1"
  }
}
